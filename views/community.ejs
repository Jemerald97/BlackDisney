<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script type="text/javascript" src="//dapi.kakao.com/v2/maps/sdk.js?appkey=54c632d6f0931728bdfd09239b10dddc"></script>
    <script type="text/javascript" src="//dapi.kakao.com/v2/maps/sdk.js?appkey=54c632d6f0931728bdfd09239b10dddc&libraries=services,clusterer,drawing"></script>
</head>
<body>
    <% for(let i = 1; i<7; i++){ %>
        <a href="/view/<%= i %>">attraction<%= i %></a>
        <div id = "map<%= i %>" style = "width:500px; height:400px;"></div>
    <% } %> 
    <script>
        const arr = [37.29304086500388, 127.19975061807155, 37.2994311712151, 127.20032962432335, 37.292981692433294, 127.20132783822574, 37.292570288481706, 127.19929758794748, 37.293994284694385, 127.20047938343201, 37.29784799201356, 127.20038863292037];
        function shibal(i){
            let container = document.getElementById('map'+(i+1)); //지도를 담을 영역의 DOM 레퍼런스
            let options = { //지도를 생성할 때 필요한 기본 옵션
                center: new kakao.maps.LatLng(arr[2*i], arr[2*i+1]), //지도의 중심좌표.
                level: 3 //지도의 레벨(확대, 축소 정도)
            };
            let map = new kakao.maps.Map(container, options); //지도 생성 및 객체 리턴
            let markerPosition = new kakao.maps.LatLng(arr[2*i], arr[2*i+1]);

            let marker = new kakao.maps.Marker({
                position: markerPosition
            });
            marker.setMap(map);
        }
        for(i = 0; i < 6; i++){
            shibal(i);
        }
    </script>
</body>
</html>
