<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Pangolin&display=swap');
        body{
            background-color: black;
            color : white;
            font-family: 'Pangolin', cursive;
        }
        .sign_up{
            display : flex;
            justify-content : center;
            margin-top : 5%;
        }
        .signup_title{
            display : flex;
            justify-content: center;
            margin-top : 5%;
        }
        input{
            background: transparent;
            width : 100%;
            color : white;
        }
        .btn{
            background-color :white  !important;
        }
    </style>
    <script  src="http://code.jquery.com/jquery-latest.min.js"></script>
    <script>
        $(function(){
            console.log('ㅁㅇㅎ');
            $('#correct').click(function(){
                const nick = $("#nick").val();
                $.ajax({
                    url : "/sign_up/correct", //주소 경로
                    dataType : 'json', //json 파일 형식으로 전송
                    type : 'POST', //POST 로 전송
                    data : {'members': nick}, //data 대입하기
                    success  :(result)=>{ //결과 
                        if(result['correct'] == true){
                            $("font[name = correct_comment]").html('');
                            $("font[name = correct_comment]").html('available');
                        }else{
                            $("font[name = correct_comment]").html('');
                            $("font[name = correct_comment]").html('not available');
                        }
                    }
                });
            });
        });
        
    </script>
</head>
<body>
    <h2 class = "signup_title">SignUp</h2>
    <div class = "sign_up">
        
        <form action="/sign_up" method="POST">
            <table>
                <tr>
                    <td>name</td>
                    <td><input type="text" name="name" placeholder="please input your name" required ></td>
                </tr>
                <tr>
                    <td>nickname</td>
                    <td>
                        <input type="text" id = "nick" name="nick" placeholder="please input your nickname" >
                        <input class = "btn" type="button" id ="correct" value="confirm">
                        <font name = "correct_comment"></font>
                    </td>
                </tr>
                <tr>
                    <td>email</td>
                    <td><input type="email" name="email" placeholder="please input your email" onclick = "emailCheck()" required ></td>
                </tr>
                <tr>
                    <td>password</td>
                    <td><input type="password" name="pwd" placeholder="please input your passwords" required ></td>
                </tr>
                <tr>
                    <td>confirm password</td>
                    <td><input type="password" name="cfPwd" placeholder="please input your passwords again" required ></td>
                </tr>
                <tr>
                    <td>birthday</td>
                    <td><input class = "btn" type="date" name="birth"></td>
                </tr>
            </table>
            <!-- 로그인 실패했을 때 화면에도 추가하기 -->
            <input  class = "btn"type="submit" value="SignUp">
        </form>
    </div>

</body>
</html>